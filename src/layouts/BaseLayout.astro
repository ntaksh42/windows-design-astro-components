---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Astro Components",
  description = "Astroで作る再利用可能なコンポーネント集"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
          'Helvetica Neue', Arial, sans-serif;
        line-height: 1.6;
        color: #333;
        background: #f9fafb;
      }

      main {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
        background: white;
        min-height: 100vh;
      }

      h1, h2, h3, h4, h5, h6 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-weight: 600;
        line-height: 1.3;
      }

      h1 {
        font-size: 2.5rem;
        color: #111827;
        border-bottom: 3px solid #3b82f6;
        padding-bottom: 0.5rem;
      }

      h2 {
        font-size: 2rem;
        color: #1f2937;
        border-bottom: 2px solid #e5e7eb;
        padding-bottom: 0.5rem;
      }

      h3 {
        font-size: 1.5rem;
        color: #374151;
      }

      p {
        margin: 1rem 0;
      }

      code {
        background: #f3f4f6;
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        font-size: 0.9em;
        font-family: 'Courier New', monospace;
        color: #dc2626;
      }

      pre {
        background: #1f2937;
        color: #f9fafb;
        padding: 1rem;
        border-radius: 8px;
        overflow-x: auto;
        margin: 1rem 0;
      }

      pre code {
        background: transparent;
        padding: 0;
        color: inherit;
      }

      ul, ol {
        margin: 1rem 0;
        padding-left: 2rem;
      }

      li {
        margin: 0.5rem 0;
      }

      hr {
        margin: 2rem 0;
        border: none;
        border-top: 2px solid #e5e7eb;
      }

      a {
        color: #3b82f6;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      blockquote {
        border-left: 4px solid #3b82f6;
        padding-left: 1rem;
        margin: 1rem 0;
        color: #6b7280;
        font-style: italic;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin: 1rem 0;
      }

      th, td {
        padding: 0.75rem;
        border: 1px solid #e5e7eb;
        text-align: left;
      }

      th {
        background: #f3f4f6;
        font-weight: 600;
      }

      /* ナビゲーション */
      nav {
        background: #1f2937;
        padding: 1rem 2rem;
        margin-bottom: 0;
      }

      nav a {
        color: white;
        margin-right: 1.5rem;
        font-weight: 500;
      }

      nav a:hover {
        color: #60a5fa;
      }
    </style>
  </head>
  <body>
    <nav>
      <a href="/">ホーム</a>
      <a href="/syntax-examples">文法サンプル</a>
      <a href="/button-demo">ボタン</a>
      <a href="/label-demo">ラベル</a>
      <a href="/textbox-demo">テキストボックス</a>
      <a href="/checkbox-demo">チェックボックス</a>
      <a href="/radiobutton-demo">ラジオボタン</a>
      <a href="/combobox-demo">コンボボックス</a>
      <a href="/numericupdown-demo">数値入力</a>
      <a href="/messagebox-demo">メッセージボックス</a>
      <a href="/menu-demo">メニュー</a>
      <a href="/groupbox-demo">グループボックス</a>
      <a href="/progressbar-demo">プログレスバー</a>
      <a href="/tabcontrol-demo">タブコントロール</a>
      <a href="/container-demo">コンテナ</a>
      <a href="/login-form">ログインフォーム</a>
    </nav>
    <main>
      <slot />
    </main>
  </body>
</html>
