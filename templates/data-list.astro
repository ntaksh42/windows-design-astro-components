---
/**
 * データ一覧画面テンプレート
 *
 * 使い方:
 * cp templates/data-list.astro src/pages/my-list.astro
 */
import BaseLayout from '../src/layouts/BaseLayout.astro';
import FlowLayout from '../src/components/ui/FlowLayout.astro';
import Label from '../src/components/ui/Label.astro';
import TextBox from '../src/components/ui/TextBox.astro';
import Button from '../src/components/ui/Button.astro';
---

<BaseLayout title="データ一覧">
  <h1>ユーザー一覧</h1>

  <FlowLayout direction="vertical" gap={15} padding={20}>
    <!-- 検索バー -->
    <FlowLayout gap={10} align="center" background="#f5f5f5" padding={15} border={true}>
      <Label>検索:</Label>
      <TextBox placeholder="名前またはメールで検索" width={300} />
      <Button variant="primary">検索</Button>
      <Button>クリア</Button>
    </FlowLayout>

    <!-- ツールバー -->
    <FlowLayout gap={10}>
      <Button variant="primary">新規追加</Button>
      <Button>編集</Button>
      <Button>削除</Button>
      <div style="flex: 1;"></div>
      <Button variant="flat">エクスポート</Button>
      <Button variant="flat">更新</Button>
    </FlowLayout>

    <!-- データテーブル -->
    <div style="overflow-x: auto;">
      <table style="width: 100%; border-collapse: collapse; background: white;">
        <thead>
          <tr style="background: #f5f5f5;">
            <th style="padding: 12px; border: 1px solid #ddd; text-align: left;">
              <input type="checkbox" />
            </th>
            <th style="padding: 12px; border: 1px solid #ddd; text-align: left;">ID</th>
            <th style="padding: 12px; border: 1px solid #ddd; text-align: left;">名前</th>
            <th style="padding: 12px; border: 1px solid #ddd; text-align: left;">メールアドレス</th>
            <th style="padding: 12px; border: 1px solid #ddd; text-align: left;">登録日</th>
            <th style="padding: 12px; border: 1px solid #ddd; text-align: left;">ステータス</th>
            <th style="padding: 12px; border: 1px solid #ddd; text-align: left;">操作</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td style="padding: 10px; border: 1px solid #ddd;">
              <input type="checkbox" />
            </td>
            <td style="padding: 10px; border: 1px solid #ddd;">1</td>
            <td style="padding: 10px; border: 1px solid #ddd;">山田太郎</td>
            <td style="padding: 10px; border: 1px solid #ddd;">yamada@example.com</td>
            <td style="padding: 10px; border: 1px solid #ddd;">2024-01-15</td>
            <td style="padding: 10px; border: 1px solid #ddd;">
              <span style="padding: 4px 8px; background: #dcfce7; color: #166534; border-radius: 4px; font-size: 12px;">アクティブ</span>
            </td>
            <td style="padding: 10px; border: 1px solid #ddd;">
              <FlowLayout gap={5}>
                <Button variant="flat">編集</Button>
                <Button variant="flat">削除</Button>
              </FlowLayout>
            </td>
          </tr>
          <tr>
            <td style="padding: 10px; border: 1px solid #ddd;">
              <input type="checkbox" />
            </td>
            <td style="padding: 10px; border: 1px solid #ddd;">2</td>
            <td style="padding: 10px; border: 1px solid #ddd;">佐藤花子</td>
            <td style="padding: 10px; border: 1px solid #ddd;">sato@example.com</td>
            <td style="padding: 10px; border: 1px solid #ddd;">2024-02-20</td>
            <td style="padding: 10px; border: 1px solid #ddd;">
              <span style="padding: 4px 8px; background: #dcfce7; color: #166534; border-radius: 4px; font-size: 12px;">アクティブ</span>
            </td>
            <td style="padding: 10px; border: 1px solid #ddd;">
              <FlowLayout gap={5}>
                <Button variant="flat">編集</Button>
                <Button variant="flat">削除</Button>
              </FlowLayout>
            </td>
          </tr>
          <tr>
            <td style="padding: 10px; border: 1px solid #ddd;">
              <input type="checkbox" />
            </td>
            <td style="padding: 10px; border: 1px solid #ddd;">3</td>
            <td style="padding: 10px; border: 1px solid #ddd;">鈴木一郎</td>
            <td style="padding: 10px; border: 1px solid #ddd;">suzuki@example.com</td>
            <td style="padding: 10px; border: 1px solid #ddd;">2024-03-10</td>
            <td style="padding: 10px; border: 1px solid #ddd;">
              <span style="padding: 4px 8px; background: #fee2e2; color: #991b1b; border-radius: 4px; font-size: 12px;">無効</span>
            </td>
            <td style="padding: 10px; border: 1px solid #ddd;">
              <FlowLayout gap={5}>
                <Button variant="flat">編集</Button>
                <Button variant="flat">削除</Button>
              </FlowLayout>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- ページネーション -->
    <FlowLayout justify="space-between" align="center">
      <Label>全 3 件中 1-3 件を表示</Label>
      <FlowLayout gap={5}>
        <Button disabled={true}>前へ</Button>
        <Button variant="primary">1</Button>
        <Button>2</Button>
        <Button>3</Button>
        <Button>次へ</Button>
      </FlowLayout>
    </FlowLayout>
  </FlowLayout>
</BaseLayout>
